<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="weltpixel_googletagmanager_gtm" type="host">https://www.googletagmanager.com</value>
                <value id="weltpixel_googletagmanager_gtmdebug" type="host">tagmanager.google.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="weltpixel_googletagmanager_gtmdebug" type="host">tagmanager.google.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="weltpixel_googletagmanager_gstatic" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="weltpixel_googletagmanager_analytics" type="host">https://www.google-analytics.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
