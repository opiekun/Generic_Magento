<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Ced_Booking::booking" title="Booking" sortOrder="40">
                    <resource id="Ced_Booking::booking_dashboard" title="Booking Dashboard" sortOrder="10"/>
                    <resource id="Ced_Booking::booking_orders" title="Booking Orders" sortOrder="20"/>
                    <resource id="Ced_Booking::booking_product" title="Booking Products" sortOrder="30"/>
                    <resource id="Ced_Booking::booking_facilities" title="Booking Facilities" sortOrder="40"/>
                    <resource id="Ced_Booking::booking_settings" title="Booking Configuration" sortOrder="50"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ced_Booking::cedcore" title="CedCommerce Installed Extensions" />
                            <resource id="Ced_Booking::ced_booking" title="CedCommerce Booking" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>