<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<customerattachments>
			<general>
				<enable>1</enable>
				<route>attachments</route>
				<hide_without_file>0</hide_without_file>
				<show_toplink>1</show_toplink>
				<title>My Files</title>
				<sort_by>position</sort_by>
			</general>
			<email>
				<sender_email_identity>general</sender_email_identity>
				<new_attachment>mca_new_attachment</new_attachment>
			</email>
		</customerattachments>
	</default>
</config>
