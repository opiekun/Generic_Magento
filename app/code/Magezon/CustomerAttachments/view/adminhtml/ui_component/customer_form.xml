<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="source" xsi:type="string">customer</item>
                <item name="initializeFieldsetDataByDefault" xsi:type="boolean">true</item>
                <item name="wasActivated" xsi:type="boolean">true</item>
            </item>
        </argument>
        <field name="customer_attachments" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Customer Attachments</label>
                <additionalClasses>
                    <class name="mca-attachment-input">true</class>
                </additionalClasses>
            </settings>
        </field>
    </fieldset>
</form>
