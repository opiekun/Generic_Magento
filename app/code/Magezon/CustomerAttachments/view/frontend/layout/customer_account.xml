<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceBlock name="customer_account_navigation">
    		<block class="Magezon\CustomerAttachments\Block\Account\SortLink" after="customer-account-navigation-files" name="customer-account-navigation-files-link" ifconfig="customerattachments/general/enable">
